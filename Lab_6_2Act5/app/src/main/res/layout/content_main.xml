<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#e7e2e2"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.jdcasas.lab_6_2act5.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="zoom Back"
        android:id="@+id/zoomBack"
        android:layout_marginLeft="47dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="81dp"
        android:background="#bfe93e"
        android:onClick="zoomBack"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="16dp">
    </Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fade"
        android:id="@+id/fadeSecund"
        android:onClick="fade"
        android:background="#f2de56"
        android:layout_alignTop="@+id/zoomBack"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="45dp"
        android:layout_marginEnd="45dp"
        android:textSize="16dp">
    </Button>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="right"
        android:id="@+id/right"
        android:background="#5564ea"
        android:onClick="right"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/zoomBack"
        android:layout_alignStart="@+id/zoomBack"
        android:layout_marginBottom="121dp"
        android:textSize="16dp">
    </Button>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="back"
        android:id="@+id/back"
        android:onClick="back"
        android:background="#e4090c"
        android:layout_alignTop="@+id/right"
        android:layout_alignLeft="@+id/fadeSecund"
        android:layout_alignStart="@+id/fadeSecund"
        android:textSize="16dp">
    </Button>

</RelativeLayout>
